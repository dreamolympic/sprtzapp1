<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="10dp"
    android:id="@+id/drawerlayoutmanager"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            app:titleTextColor="@color/cardview_light_background"
            android:background="@color/colorAccent"/>


    <ImageView
        android:id="@+id/imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:contentDescription="Image"
        app:srcCompat="@drawable/dos_logo" />

    <TextView
        android:id="@+id/tvmnumbermanager"
        android:layout_width="wrap_content"
        android:textSize="15dp"
        android:textColor="#4A148C"
        android:layout_marginTop="35dp"
        android:layout_height="wrap_content"  />


    <TextView
        android:id="@+id/tvdashboardcenters"
        android:layout_width="wrap_content"
        android:layout_marginTop="75dp"
        android:textColor="#2196F3"
        android:textSize="15dp"
        android:layout_height="wrap_content"  />

    <TextView
        android:id="@+id/tvdashboardplayers"
        android:layout_width="wrap_content"
        android:layout_marginTop="75dp"
        android:textColor="#2196F3"
        android:textSize="15dp"
        android:layout_height="wrap_content"  />

    <TextView
        android:id="@+id/tvdashboardstaff"
        android:layout_width="wrap_content"
        android:layout_marginTop="75dp"
        android:textColor="#2196F3"
        android:textSize="15dp"
        android:layout_height="wrap_content"  />

    <TextView
        android:id="@+id/tvdashboardroles"
        android:layout_width="wrap_content"
        android:layout_marginTop="75dp"
        android:textColor="#2196F3"
        android:textSize="15dp"
        android:layout_height="wrap_content"  />

    <TextView
        android:id="@+id/tvdashboardfeeplans"
        android:layout_width="wrap_content"
        android:layout_marginTop="75dp"
        android:textColor="#2196F3"
        android:textSize="15dp"
        android:layout_height="wrap_content"  />

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu_manager"
        android:layout_gravity="start"/>


</androidx.drawerlayout.widget.DrawerLayout>